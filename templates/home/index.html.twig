{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <table class="table">
        <caption>Les produits les plus récent</caption>
        <thead>
            <tr>
                <th>Nom</th>
                <th>Date</th>
            </tr>
        </thead>
        <tbody>
            {% for product in allProduct['recent'] %}
            <tr>
                <td><a href="{{ path('product.show', { id : product.getId() }) }}">{{ product.getName() }}</a></td>
                <td>{{ product.getCreatedAt() | date('d/m/Y') }}</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>

    <table class="table">
        <caption>Les produits les moins cher</caption>
        <thead>
            <tr>
                <th>Nom</th>
                <th>Prix</th>
            </tr>
        </thead>
        <tbody>
            {% for product in allProduct['cheapest'] %}
            <tr>
                <td><a href="{{ path('product.show', { id : product.getId() }) }}">{{ product.getName() }}</a></td>
                <td>{{ product.getPrice() }}€</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
